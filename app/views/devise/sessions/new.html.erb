<div class='form'>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
  <div class="field">
    <div class='title'>
      <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <div class='title'>
      <%= f.label :password %><br />
    </div>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class='title'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <div class='title'>
      <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
